{
  "compilerOptions": {
    "outDir": "build",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "newLine": "lf",
    "allowJs": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "files": [
      "./index.ts",
      "test/parsing.test.ts",
      "test/serialization.test.ts",
      "test/utils.js"
  ]
}
